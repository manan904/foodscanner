---
interface Props {
  recipe: {
    title: string;
    description: string;
    image: string;
    slug: string;
    prepTime: string;
    cookTime: string;
  };
}

const { recipe } = Astro.props;
---

<article class="recipe-card">
  <img src={recipe.image} alt={recipe.title} />
  <div class="content">
    <h3>{recipe.title}</h3>
    <p>{recipe.description}</p>
    <div class="meta">
      <span>Prep: {recipe.prepTime}</span>
      <span>Cook: {recipe.cookTime}</span>
    </div>
    <a href={`/recipes/${recipe.slug}`} class="button">View Recipe</a>
  </div>
</article>

<style>
  .recipe-card {
    background: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
  }
  
  .recipe-card:hover {
    transform: translateY(-4px);
  }
  
  img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }
  
  .content {
    padding: 1.5rem;
  }
  
  .meta {
    display: flex;
    gap: 1rem;
    margin: 1rem 0;
    font-size: 0.9rem;
    color: #666;
  }
  
  .button {
    display: inline-block;
    background: var(--primary-color);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    text-decoration: none;
    transition: background 0.3s ease;
  }
  
  .button:hover {
    background: #3d8a3a;
  }
</style>