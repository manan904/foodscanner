---
interface Props {
  member: {
    name: string;
    role: string;
    bio: string;
    image: string;
  };
}

const { member } = Astro.props;
---

<div class="team-member">
  <img src={member.image} alt={member.name} />
  <div class="content">
    <h3>{member.name}</h3>
    <h4>{member.role}</h4>
    <p>{member.bio}</p>
  </div>
</div>

<style>
  .team-member {
    background: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  img {
    width: 100%;
    height: 300px;
    object-fit: cover;
  }

  .content {
    padding: 1.5rem;
  }

  h3 {
    margin-bottom: 0.5rem;
  }

  h4 {
    color: var(--primary-color);
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }

  p {
    color: #666;
    line-height: 1.6;
  }
</style>