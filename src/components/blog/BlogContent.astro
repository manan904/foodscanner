---
import type { BlogPost } from '../../data/content';
import ShareButtons from './ShareButtons.astro';

interface Props {
  post: BlogPost;
}

const { post } = Astro.props;
---

<article class="blog-post">
  <header>
    <h1>{post.title}</h1>
    <div class="meta">
      <span>{new Date(post.date).toLocaleDateString()}</span>
      <span>By {post.author}</span>
    </div>
  </header>
  
  <img src={post.image} alt={post.title} />
  
  <div class="content">
    {post.content}
  </div>
  
  <ShareButtons title={post.title} />
</article>

<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  header {
    text-align: center;
    margin-bottom: 2rem;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .meta {
    color: #666;
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: 1rem;
    margin-bottom: 2rem;
  }

  .content {
    line-height: 1.8;
    font-size: 1.1rem;
  }
</style>